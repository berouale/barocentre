<div class="col-sm-3 col-lg-4 mb-2">
  <div class="d-flex flex-row justify-content-start align-items-center my-1" style="background: #FFC300; border-radius: 50px; width: 300px">
    <% if element.user.photo.attached? %>
      <%= image_tag element.user.photo, class: "dash-avatar me-3", style: "border: 4px solid white;" %>
    <% else %>
      <%= image_tag "https://as1.ftcdn.net/v2/jpg/03/53/11/00/1000_F_353110097_nbpmfn9iHlxef4EDIhXB1tdTD0lcWhG9.jpg", class: "rounded-circle me-3", style: "width: 100px" %>
    <% end %>
    <p class="text-ellipsis--2 mt-3" style="font-size: 13px; width: 150px">
      <% if @event.user == element.user %>
        <i class="fa-solid fa-crown"></i>
      <% end %>
      <strong><%= element.user.username.capitalize %></strong> - <%= element.transport_icon %>
      <br>
      <%= element.user_address %>
    </p>
    <div data-event-subscription-target="trashcan" class="trashcan">
      <%# if element.user != current_user %>
        <div class="ms-2 d-flex justify-content-center align-items-end">
          <%= link_to event_user_path(element),
                      data: {
                        turbo_method: :delete,
                        turbo_confirm: "Voulez-vous retirer #{element.user.username.capitalize} de l'évènement #{@event.name.capitalize} ?"
                      } do %>
            <i class="fa-regular fa-trash-can me-3"></i>
          <% end %>
        </div>
      <%# end %>
    </div>
  </div>
</div>
