<div class="container hauteur flex-column square-box d-flex justify-content-center align-items-center">
  <%= link_to image_tag("barocentre_logo.png"), root_path %>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, label: false, placeholder: "adrien.lefory@gmail.com" %>
      <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, label: false, placeholder: "mot de passe..." %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <br>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button2" %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "button2" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "button2" %>
    </div>
  <% end %>
</div>
