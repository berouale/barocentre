<div class="container hauteur flex-column square-box d-flex justify-content-center align-items-center">
  <%= link_to image_tag("barocentre_logo.png"), root_path %>
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
          <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" },
                  label: false,
                  placeholder: "Laurent" %>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: false,
                  placeholder: "laurent.bar@gmail.com" %>

      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "Mot de passe"
                  %>

      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label: false,
                  placeholder: "Confirmation du mot de passe"
                  %>
      <%= f.input :photo, as: :file, label: false, placeholder: "Photo de profil" %>
    </div>


    <br>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "button2" %>
      <%= link_to "back", root_path, class: "button2" %>
      <%= link_to "Tu as déjà un compte ?", new_session_path(resource_name), class: "button2" %>
    </div>
  <% end %>
</div>
