<div class="d-flex justify-content-center mt-3 p-3" style="background: white; width: 350px; height: 750px; margin: 0 auto">

      <%= simple_form_for @event, html: {
                      data: {
                        controller: 'flatpickr'
                      }
                    }  do |f| %>
        <div class="form-inputs">
          <div class="d-flex justify-content-center mb-4">
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, :width=>200, :height=>200, :radius=>"max", :crop=>"fill", class: "rounded-circle", style: "  box-shadow: 0 70px 63px -60px #000000" %>
            <% else %>
              <%= image_tag "https://as1.ftcdn.net/v2/jpg/03/53/11/00/1000_F_353110097_nbpmfn9iHlxef4EDIhXB1tdTD0lcWhG9.jpg", class: "rounded-circle", style: " width: 250px"%>
            <% end %>

          </div>
          <%= f.input :date,
                      label: false,
                      as: :string,
                      input_html: {
                        class: "d-none",
                        data: {
                          flatpickr_target: 'dateInput',
                        }
                      } %>
          <%= f.input :event_status,
                      input_html: { value: "0" },
                      as: :hidden %>
          <div class="mt-3">
            <%= f.input :name,
                label: false,
                placeholder: "Nom de l'événement" %>
          </div>
          <div class="form-actions">
            <div class="d-flex justify-content-between">
              <%= link_to root_path, class:"btn btn-secondary mt-3", style: "background: #0E0000; border: 0px" do %>
                <i class="fa-solid fa-arrow-left"></i>
              <% end %>
              <%= f.button :submit, "Je crée mon événement", class: "btn btn-ghost mt-3", style: "border: 0px" %>
            </div>
        </div>
      <% end %>
        </div>


</div>
