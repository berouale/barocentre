
<div class="navbar navbar-default navbar-light navbar-lewagon navbar-default sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "barocentre_biere.png", class: "navbar-logo"%>
    <% end %>
    <% if action_name == "home" %>
      <p style="color: white; font-family: 'Montserrat'; letter-spacing: 3px; font-size: 20px; position: relative; top: 9px;">
        BAROCENTRE
      </p>
    <% end %>
    <button class="navbar-toggler" style="border: 0px" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item border-bottom p-2">
           <% if current_user.photo.attached? %>
             <%= cl_image_tag current_user.photo.key, class:"avatar" %>
          <% else %>
            <%= image_tag "https://as1.ftcdn.net/v2/jpg/03/53/11/00/1000_F_353110097_nbpmfn9iHlxef4EDIhXB1tdTD0lcWhG9.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <span class="ms-2" style="color: white"><%= current_user.username %></span>

          </li>
          <li class="nav-item p-2">
            <%= link_to "Dashboard", dashboard_path, class: "nav-link", style: "color: white" %>
          </li>
          <li class="nav-item p-2">
            <%= link_to "Créer un événement", new_event_path, class: "nav-link", style: "color: white" %>
          </li>
          <li class="nav-item p-2">
            <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link", style: "color: white" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link", style: "color: white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
